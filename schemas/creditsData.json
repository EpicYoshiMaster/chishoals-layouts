{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "setupTeam": {
            "type": "array",
            "items": { "type": "string" },
            "description": "The list of Setup and Teardown volunteers helping with the event.",
            "default": ["Volunteer #1", "Volunteer #2", "Volunteer #3"]
        },
        "commentaryTeam": {
            "type": "array",
            "items": { "type": "string" },
            "description": "The list of Commentators helping with the event.",
            "default": ["Commentator #1", "Commentator #2", "Commentator #3"]
        },
        "techTeam": {
            "type": "array",
            "items": { "type": "string" },
            "description": "The list of Stream Technicians helping with the event.",
            "default": ["Technician #1"]
        },
        "staffTeam": {
            "type": "array",
            "items": { "type": "string" },
            "description": "The list of SquidWest TOs and Staff.",
            "default": ["Staff #1", "Staff #2", "Staff #3"]
        },
        "eventTeam": {
            "type": "array",
            "items": { "type": "string" },
            "description": "The list of Event TOs for this event.",
            "default": ["Event TO Name"]
        }
    },
    "$defs": {
        "creditsRow": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": { "type": "string", "default": "Position Name" },
				"image": { "type": "string", "default": "" },
                "names": { 
					"type": "array",
					"items": { "type" : "string" }
				}
            }
        }
    },
    "required": ["setupTeam", "commentaryTeam", "techTeam", "staffTeam", "eventTeam"]
}